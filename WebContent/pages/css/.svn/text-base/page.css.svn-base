body {
    background: #E8E8E8;
    color: #808080;
    font-family: 'Lucida Grande', Verdana, Arial, Sans-Serif;
    text-align: center;
}

/*
 头部
 */
#header {
    height: 180px;
    width: 760px;
    background-image: url(static/header.jpg);
    background-repeat: no-repeat;
    background-position: top center;
    text-align: right;
}

#header h2 {
    color: #000000;
    font-size: 200%;
    margin-right: 20px;
}

/*
 正文
 */
#wrapper {
    width: 760px;
    background-image: url(static/wrapper.jpg);
    background-repeat: repeat-y;
    background-position: center;
    text-align: left;
}

/*
 选票区域
 */
#selection {
    padding: 0px 20px;
	text-align:right;
}

#status{
	background:url(static/status-bg.jpg) no-repeat right bottom;
}

/*
 调整大小
 */
#filter {
    padding: 0px 20px;
}

/*
 浏览列表
 */
#browse {
    margin: 0px 20px;
}

/*
 教师信息
 */
#teacherInfo {
    margin: 0px 20px;
    padding: 10px 20px;
}

#workInfo {
    margin: 0px 20px;
    padding: 10px 20px;
}

#teacherPic {
    margin: 0px 20px;
    padding: 10px 20px;
}

#teacherPic img {
    max-width: 200px;
    max-height: 200px;
}

#messageBox {
    margin: 0px 20px;
    padding: 10px 20px;
}

/*
 尾部
 */
#footer {
    clear: both;
    height: 50px;
    width: 760px;
    background-image: url(static/footer.jpg);
    background-repeat: no-repeat;
    background-position: bottom center;
    font-size: 80%;
}

#teacherPic p {
    background-color: #c0c0c0;
    margin: 0;
    text-align: center;
    color: #ffffff;
    font-size: 200%;
}

#teacherPic p:hover {
    color: #000000;
}

#teacherPic img {
    border: 5px solid #c0c0c0;
}

.tdDes {
    text-align: left;
}

.calendar {
    width: 100%;
}

.calendar td {
    background-color: #c0c0c0;
    width: 20%;
    height: 50px;
}

.calendar td:hover {
    background-color: #9dceff;
}

.content {
    list-style: none;
}

#workInfo p {
    border: 1px solid #c0c0c0;
    border-bottom: 2px solid #c0c0c0;
    border-top: 0;
    padding: 10px;
}

#workInfo p:hover {
    color: #4d4d4d;
}
